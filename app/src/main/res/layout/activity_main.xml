<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/a">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Instructor"
        android:id="@+id/btnIns"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:onClick="launchInstructor"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Course"
        android:id="@+id/btnCourse"
        android:layout_below="@+id/btnIns"
        android:layout_alignLeft="@+id/btnIns"
        android:layout_alignStart="@+id/btnIns"
        android:layout_marginTop="53dp"
        android:layout_alignRight="@+id/btnIns"
        android:layout_alignEnd="@+id/btnIns" />
</RelativeLayout>
